{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "**/*.js",
          "**/*.json",
          "app_server/**",
          "uploads/**",
          "config/**",
          "controllers/**",
          "middleware/**",
          "models/**",
          "routes/**",
          "services/**",
          "utils/**",
          "schemas/**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}